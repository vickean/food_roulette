<div class="col-lg-4 col-lg-offset-4 text-center">
 <h2>SIGN IN </h2>
<%= form_for :session, url: session_path do |form| %><fieldset>
 <hr class="colorgraph">
 <div class="form-group">
   <%= form.label :email %>
   <%= form.text_field :email, type: 'email', class: "form-control input-lg" %>
 </div>  <div class="form-group">
   <%= form.label :password %>
   <%= form.password_field :password , class: "form-control input-lg"%>
 </div>  <div class="row">
   <div class="col-xs-6 col-sm-6 col-md-6">
     <%= form.submit "sign in", class:"btn btn-lg btn-success btn-block"%>
   </div>
 </div>
 <hr class="colorgraph"><div class="other-links">
 <% if Clearance.configuration.allow_sign_up? %>
 <div class="col-xs-6 col-sm-6 col-md-6">
   <%= link_to t(".sign_up"), sign_up_path , class:"btn btn-lg btn-primary btn-block" %>
   <%= link_to t(".forgot_password"), new_password_path %>
   <%= link_to 'Facebook', '/auth/facebook' %>
 </div>
 <% end %>
</div>
<% end %>
</div>
</fieldset>
</div>
